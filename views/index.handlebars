<div class="container">
  <div class="row text-center">
    <div class="col-md-12">
      <h1>EAT A BURGER</h1>
      <hr>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-md-6">
      <h2>Burgers served!</h2>

      <ul>
        {{#each burger}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devoured" data-id="{{id}}" data-devoured="{{devoured}}">
            eat!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Eaten Burgers!</h2>

      <ul>
        {{#each burger}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <hr>
  <div class="row text-center">
    <div class="col-md-12">
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Order burger here:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Order Up!</button>
      </form>
    </div>
  </div>

</div>